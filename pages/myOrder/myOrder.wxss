.head {
  background-color: #fff;
  padding: 20rpx 30rpx 30rpx 30rpx;
}

.title {
  line-height: 93rpx;
  border-bottom: 1rpx RGBA(221, 221, 221, 1) solid;
}
.orders {
  padding: 0 30rpx;
}
.order .image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 5rpx;
  margin-right: 20rpx;
}
.order {
  padding: 20rpx 0;
  border-bottom: 1rpx RGBA(221, 221, 221, 1) solid;
  align-items: flex-start;
}
.order .card {
  line-height: 40rpx;
  border-radius:2rpx;
  padding: 0 15rpx;
  border:1rpx solid rgba(255,144,141,1);
}
.order .btn {
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius:30rpx;
  border:1rpx solid rgba(229,57,53,1);
  background-color: transparent;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  color:rgba(229,57,53,1);
  display: inline-block;
}