.cards {
  justify-content: space-between;
  flex-wrap: wrap;
}
.card {
  width: 220rpx;
  height: 220rpx;
  border:1rpx solid rgba(168,173,175,1);
  margin-bottom: 15rpx;
  box-sizing: border-box;
  padding-top: 20rpx;
}
.card.active {
  background: RGBA(255, 247, 227, 1);
}
.card .reward {
  width:180rpx;
  height:40rpx;
  line-height: 40rpx;
  background:rgba(168,173,175,1);
  border-radius:20rpx;
  margin-left: auto;
  margin-right: auto;
  color: #fff;
}
.card.active .reward {
  background:rgba(235,170,0,1);
}
.des {
  width:449rpx;
  height:100rpx;
  color:rgba(57,64,75,1);
  line-height:50rpx;
  margin: 43rpx auto 38rpx auto;
}
.btn-join {
  border: 0;
  margin-top: 42rpx;
  width:690rpx;
  height:100rpx;
  line-height: 100rpx;
  background:rgba(229,57,53,1);
  border-radius:6rpx;
  margin-bottom: 30rpx;
}