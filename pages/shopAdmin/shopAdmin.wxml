<view class='page-container bg-g c-1' wx:if='{{info && shopInfo}}'>
  <view class='p-t30 bg-w m-b20 p-b30'>
    <image src='/assets/images/good.png' class='qrcode'></image>
    <view class='ct f-r30'>{{shopInfo.business.name}}</view>
  </view>

  <view class='bg-w f-r26' wx:if='{{info.isBusiness === true}}'>
    <view class='flex menus bb'>
      <navigator url='/pages/' hover-class='hoverClass' class='flex-1 flex menu br'>
        <image src='/assets/images/data@2x.png' class='page-icon'></image>
        <text>基础资料维护</text>
      </navigator>
      <navigator url='/pages/staffList/staffList' hover-class='hoverClass' class='flex-1 flex menu'>
        <image src='/assets/images/yuangong@2x.png' class='page-icon'></image>
        <text>员工管理</text>
      </navigator>
    </view>

    <view class='flex menus bb'>
      <navigator url='/pages/receiptWaySetting/receiptWaySetting' hover-class='hoverClass' class='flex-1 flex menu br'>
        <image src='/assets/images/shiliangzhinengduixiangx@2x.png' class='page-icon'></image>
        <text>收款方式设置</text>
      </navigator>
      <navigator url='/pages/couponExchange/couponExchange' hover-class='hoverClass' class='flex-1 flex menu'>
        <image src='/assets/images/youhuijin@2x.png' class='page-icon'></image>
        <text>优惠金兑换</text>
      </navigator>
    </view>

    <view class='flex menus'>
      <navigator url='/pages/contact/contact' hover-class='hoverClass'  class='flex-1 flex menu br'>
        <image src='/assets/images/cubanshipinyuanshibili@2x.png' class='page-icon'></image>
        <text>优惠比例调整</text>
      </navigator>
      <navigator url='/pages/businessReport/businessReport' hover-class='hoverClass' class='flex-1 flex menu'>
        <image src='/assets/images/baobiao@2x.png' class='page-icon'></image>
        <text>经营报表</text>
      </navigator>
    </view>
  </view>
</view>