<view class='page-container f-r30 c-1 bg-g'>
  <view class='modules bg-w m-b20'>
    <view class='module flex p-r30 p-l30'>
      <text class='label1'>申请城市</text>
      <view class='flex-1 m-r20'>
        <picker mode='region' value='{{city}}'>
          <view class='c-4 cr'>{{city[0]}}，{{city[1]}}，{{city[2]}}</view>
        </picker>
      </view>
      <image src='/assets/images/Group 7@2x.png' class='icon-go'></image>
    </view>
    <view class='module flex p-r30 p-l30'>
      <text class='label1'>申请人姓名</text>
      <input class='flex-1 cl' placeholder='请输入申请人姓名'></input>
    </view>
    <view class='module flex p-r30 p-l30'>
      <text class='label1'>身份证号码</text>
      <input class='flex-1 cl' placeholder='请输入身份证号码'></input>
    </view>
  </view>

  <view class='modules bg-w m-b20'>
    <view class='module flex p-r30 p-l30'>
      <text class='label1'>手机号码</text>
      <input class='flex-1 cl' placeholder='请输入手机号码'></input>
    </view>
    <view class='module flex p-r30 p-l30'>
      <text class='label1'>验证码</text>
      <input class='flex-1 cl' placeholder='请输入验证码'></input>
    </view>
  </view>

  <view class='modules bg-w m-b30'>
    <view class='flex p-30 ai-top'>
      <text class='label1'>申请理由</text>
      <textarea class='fc' placeholder='请阐述您的推广策略、资源、 理念...（最多500字）'></textarea>
    </view>
  </view>

  <button class='page-btn f-r32 c-w'>提交申请</button>
</view>